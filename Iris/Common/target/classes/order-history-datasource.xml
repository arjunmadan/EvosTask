<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="writeOrderHistoryDataSource" class="com.mchange.v2.c3p0.ComboPooledDataSource"
          destroy-method="close">
        <constructor-arg name="configName" value="writeOrderHistoryDataSource"/>
        <property name="driverClass" value="net.sf.log4jdbc.sql.jdbcapi.DriverSpy"/>
        <property name="jdbcUrl" value="${datasource.orderHistory.url}"/>
        <property name="user" value="${datasource.orderHistory.username}"/>
        <property name="password" value="${datasource.orderHistory.password}"/>
        <property name="initialPoolSize" value="3"/>
        <property name="minPoolSize" value="3"/>
        <property name="maxPoolSize" value="${datasource.orderHistory.connections.max}"/>
        <property name="maxIdleTime" value="300"/>
        <property name="idleConnectionTestPeriod" value="${datasource.orderHistory.connections.test.period.sec}"/>
        <property name="testConnectionOnCheckin" value="true"/>
        <property name="acquireIncrement" value="2"/>
        <property name="numHelperThreads" value="12"/>
    </bean>

    <bean id="readOrderHistoryDataSource" class="com.mchange.v2.c3p0.ComboPooledDataSource"
          destroy-method="close">
        <constructor-arg name="configName" value="readOrderHistoryDataSource"/>
        <property name="driverClass" value="net.sf.log4jdbc.sql.jdbcapi.DriverSpy"/>
        <property name="jdbcUrl" value="${datasource.orderHistory.read.url}"/>
        <property name="user" value="${datasource.orderHistory.username}"/>
        <property name="password" value="${datasource.orderHistory.password}"/>
        <property name="initialPoolSize" value="3"/>
        <property name="minPoolSize" value="3"/>
        <property name="maxPoolSize" value="${datasource.orderHistory.connections.max}"/>
        <property name="maxIdleTime" value="300"/>
        <property name="idleConnectionTestPeriod" value="${datasource.orderHistory.connections.test.period.sec}"/>
        <property name="testConnectionOnCheckin" value="true"/>
        <property name="acquireIncrement" value="2"/>
        <property name="numHelperThreads" value="12"/>
    </bean>
</beans>
