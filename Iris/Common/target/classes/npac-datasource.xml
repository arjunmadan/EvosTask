<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

  <bean id="NPACDataSource" name="NPACDataSource" class="com.mchange.v2.c3p0.ComboPooledDataSource"
  destroy-method="close">
    <constructor-arg name="configName" value="NPACDataSource"/>
    <property name="driverClass" value="net.sf.log4jdbc.sql.jdbcapi.DriverSpy"/>
    <property name="jdbcUrl" value="${datasource.npac.url}"/>
    <property name="user" value="${datasource.npac.username}"/>
    <property name="password" value="${datasource.npac.password}"/>
    <property name="initialPoolSize" value="4"/>
    <property name="minPoolSize" value="4"/>
    <property name="maxPoolSize" value="${datasource.npac.connections.max}"/>
    <property name="idleConnectionTestPeriod" value="${datasource.npac.connections.test.period.sec}"/>
    <property name="testConnectionOnCheckin" value="true"/>
    <property name="maxIdleTimeExcessConnections" value="300"/>
  </bean>

</beans>
