<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="messagingDataSource" class="com.mchange.v2.c3p0.ComboPooledDataSource"
          destroy-method="close">
        <constructor-arg name="configName" value="messagingDataSource"/>
        <property name="driverClass" value="net.sf.log4jdbc.sql.jdbcapi.DriverSpy"/>
        <property name="jdbcUrl" value="${datasource.messaging.url:}"/>
        <property name="user" value="${datasource.messaging.username:}"/>
        <property name="password" value="${datasource.messaging.password:}"/>
        <property name="initialPoolSize" value="3"/>
        <property name="minPoolSize" value="3"/>
        <property name="maxPoolSize" value="${datasource.messaging.connections.max:}"/>
        <property name="idleConnectionTestPeriod" value="${datasource.messaging.connections.test.period.sec:}"/>
        <property name="testConnectionOnCheckin" value="true"/>
        <property name="acquireIncrement" value="1"/>
        <property name="numHelperThreads" value="12"/>
    </bean>
</beans>
