<?xml version="1.0" encoding="UTF-8"?>
<module rename-to='sbcwebapp'>
    <!-- Inherit the core Web Toolkit stuff.                        -->
    <inherits name='com.google.gwt.user.User'/>

    <!-- Inherit the default GWT style sheet.  You can change       -->
    <!-- the theme of your GWT application by uncommenting          -->
    <!-- any one of the following lines.                            -->
    <inherits name='com.google.gwt.user.theme.standard.Standard'/>
    <!-- <inherits name='com.google.gwt.user.theme.chrome.Chrome'/> -->
    <!-- <inherits name='com.google.gwt.user.theme.dark.Dark'/>     -->

    <!-- Other module inherits                                      -->
    <inherits name="com.google.gwt.editor.Editor"/>
    <inherits name='org.hibernate.validator.HibernateValidator'/>
    <inherits name="com.bandwidth.sbcprovisioning.common.Domain"/>
    <inherits name="com.bandwidth.sbcprovisioning.common.Exception"/>
    <inherits name="com.bandwidth.sbcprovisioning.common.SipAuth"/>
    <inherits name="com.bandwidth.sbcprovisioning.common.Util"/>
    <inherits name='com.watopi.chosen.Chosen'/>
    <inherits name='com.google.gwt.query.Query'/>
    <inherits name='com.google.web.bindery.event.EventBinder'/>
    <inherits name="com.google.gwt.inject.Inject"/>
    <inherits name="com.google.gwt.activity.Activity"/>

    <!--Comment out to disable debug IDs on UI objects-->
    <inherits name="com.google.gwt.user.Debug"/>

    <!-- Specify the app entry point class.                         -->
    <entry-point class='com.bandwidth.sbc.webapp.client.SbcWebapp'/>

    <!-- Specify the paths for translatable code -->
    <source path='client'/>
    <source path='shared'/>

    <servlet path="/TrunkGroupService" class="com.bandwidth.sbc.webapp.server.service.trunkgroup.TrunkGroupServiceServlet"/>
    <servlet path="/SystemPropertyService" class="com.bandwidth.sbc.webapp.server.service.systemproperty.SystemPropertyServiceServlet"/>
    <servlet path="/ProfileService" class="com.bandwidth.sbc.webapp.server.service.profile.ProfileServiceServlet"/>
    <servlet path="/PropertiesProviderService" class="com.bandwidth.sbc.webapp.server.service.properties.PropertiesProviderServiceServlet"/>
    <servlet path="/NodeService" class="com.bandwidth.sbc.webapp.server.service.node.NodeServiceServlet"/>
    <servlet path="/NodeGroupService" class="com.bandwidth.sbc.webapp.server.service.nodegroup.NodeGroupServiceServlet"/>
    <servlet path="/AuthenticationService" class="com.bandwidth.sbc.webapp.server.service.authentication.AuthenticationServiceServlet"/>
    <servlet path="/AccountEdgeManagementService" class="com.bandwidth.sbc.webapp.server.service.accountedgemanagement.AccountEdgeManagementServiceServlet"/>
    <servlet path="/WizardTemplateService" class="com.bandwidth.sbc.webapp.server.service.wizardtemplate.WizardTemplateServiceServlet"/>

    <!-- Specify the Validator for the Validation bootstrap to use. -->
    <replace-with class="com.bandwidth.sbc.webapp.client.validation.FormValidatorFactory">
        <when-type-is class="javax.validation.ValidatorFactory" />
    </replace-with>

    <stylesheet src="/css/style-common.css"/>
    <stylesheet src="/css/style.css"/>
    <stylesheet src="/css/forms.css"/>
    <stylesheet src="/css/otw_sbm.css"/>
</module>
