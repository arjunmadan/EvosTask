<?xml version="1.0" encoding="UTF-8"?>

<configuration scan="true">
    <appender name="LOCALFILE" class="ch.qos.logback.core.FileAppender">
        <Append>true</Append>
        <File>./tga-worker.log</File>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %logger.%M\(\)%line - %m%n</pattern>
        </encoder>
    </appender>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %logger.%M\(\)%line - %m%n</pattern>
        </encoder>
    </appender>

    <logger name="com.bandwidth.sbc" level="DEBUG"/>
    <logger name="com.bandwidth.sbcprovisioning" level="DEBUG"/>

    <logger name="org.springframework" level="DEBUG"/>
    <logger name="org.springframework.web.servlet" level="WARN"/>
    <logger name="com.amazonaws" level="WARN"/>
    <logger name="com.amazonaws.request" level="INFO"/>
    <logger name="httpclient.wire" level="WARN"/>
    <logger name="org.apache.axis.transport.http.HTTPSender" level="DEBUG"/>

    <root level="WARN">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="LOCALFILE"/>
    </root>

    <turboFilter class="com.bandwidth.sbcprovisioning.common.util.SoapPasswordFilter"/>
</configuration>
