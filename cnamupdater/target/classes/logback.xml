<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="true" scan="true" scanPeriod="60 seconds">
    <property name="appName" value="CnamUpdaterApplication"/>
    <contextName>${appName}</contextName>

    <shutdownHook class="ch.qos.logback.core.hook.DelayingShutdownHook"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%t] %-5p \(%F:%L\) [%X{traceId} %X{spanId}] %replace(%replace(%m){"\"userId\":\".*\",\"password\":\".*\"","\"userId\":******,\"password\":******"}){"\"requestedUrl\":\"/.*/identitydomains/[a-zA-Z0-9]+/users/.*\"", "UserCreation"}%n</pattern>
        </encoder>
    </appender>
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>

    <logger name="com.inetwork" level="DEBUG"/>
    <logger name="feign" level="DEBUG" />
</configuration>