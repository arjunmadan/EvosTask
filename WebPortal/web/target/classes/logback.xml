<configuration debug="true" scan="true">
   <property name="appName" value="webPortal" />
   <contextName>${appName}</contextName>

   <shutdownHook class="ch.qos.logback.core.hook.DelayingShutdownHook"/>
   
   <!-- configuration stuff that is valid for all environments -->
   <if condition='isDefined("logDir")'><!-- if logDir is defined we assume it's being run on server and we log to file -->
      <then>
         <appender name="debug-file" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <File>${logDir}/${appName}.debug.log</File>
            <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
               <level>DEBUG</level>
            </filter>
            <encoder>
               <pattern>%d [%t] %-5p %c.%L - %m%n</pattern>
            </encoder>
            <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
               <fileNamePattern>${logDir}/old/debug/${appName}.%d{yyyy-MM-dd_HH}.%i.debug.log.gz</fileNamePattern>
               <maxHistory>168</maxHistory>
               <maxFileSize>50MB</maxFileSize>
               <totalSizeCap>5GB</totalSizeCap>
            </rollingPolicy>
         </appender>

         <appender name="AUDIT-FILE" class="ch.qos.logback.core.FileAppender">
            <file>${logDir}/${appName}.audit.log</file>
            <append>true</append>
            <encoder>
               <pattern>%d [%t] %-5p %c %X - %m%n</pattern>
            </encoder>
         </appender>
         <!-- additivity=false ensures audit data only goes to the analytics log -->
         <logger name="AUDIT" level="DEBUG" additivity="false">
            <appender-ref ref="AUDIT-FILE"/>
         </logger>
         
         <root level="DEBUG">
            <appender-ref ref="debug-file" />
         </root>
      </then>
      <else><!-- if logDir is undefined we assume local run and log to console -->

         <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
               <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
            </encoder>
         </appender>

         <root level="INFO">
            <appender-ref ref="STDOUT" />
         </root>
         
      </else>
   </if>

   <logger name="com.inetwork" level="TRACE" />
   <logger name="org.apache.http" level="INFO" />
   <logger name="org.springframework" level="INFO" />

   <logger name="com.inetwork.common.util.CustomBeanPropertyRowMapper" level="OFF"/>
   <logger name="com.inetwork.common.dao.ForgivingJdbcTemplate" level="OFF"/>
    <!-- log4jdbc sql & jdbc logging -->
    <logger name="jdbc.sqlonly" level="OFF"/>
    <logger name="jdbc.sqltiming"  level="INFO" />
    <logger name="jdbc.audit"  level="OFF" />
    <logger name="jdbc.resultset"  level="OFF" />
    <logger name="jdbc.connection"  level="OFF" />
    <logger name="jdbc.resultsettable"  level="OFF" />
</configuration>
