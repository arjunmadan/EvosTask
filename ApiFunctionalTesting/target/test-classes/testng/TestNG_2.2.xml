<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="One-thread tests" configfailurepolicy="continue" parallel="tests"
  thread-count="1">
  <listeners>
    <listener class-name="com.inetwork.iris.functional.TestNGSupplement.AnnotationTransformer"/>
    <listener class-name="com.inetwork.iris.functional.ThreadNameChangerMethodListener"/>
  </listeners>

  <test name="Available and global tns that are shared between all tests">
    <packages>
      <package name="com.inetwork.iris.functional.history.tns.available.*"/>
      <package name="com.inetwork.iris.functional.history.tns.global.*"/>
    </packages>
  </test>

  <test name="Protected Tns Search">
    <!-- This tests set manually protected account to available tns and that has affect to other tests  -->
    <packages>
      <package name="com.inetwork.iris.functional.search.protectedtnssearch.*"/>
    </packages>
  </test>
  <test name="AvailableNpaNxxSearch">
    <classes>
      <class name="com.inetwork.iris.functional.search.AvailableNpaNxxSearchTest"/>
    </classes>
  </test>
  <test name="Ordering.BackOrdering">
    <packages>
      <package name="com.inetwork.iris.functional.ordering.backordering.*"/>
    </packages>
  </test>

  <test name="Import available order tests ">
    <packages>
      <package name="com.inetwork.iris.functional.history.orders.importavailable.*"/>
    </packages>
  </test>

  <test name="Achilles tests ">
    <packages>
      <package name="com.inetwork.iris.functional.achilles.*"/>
    </packages>
  </test>

  <test name="LNP tests with USE_PSS_INSTEAD_PORTPS togglz disabled">
    <packages>
      <package name="com.inetwork.iris.functional.lnp.lnpchecker.portps.*"/>
      <package name="com.inetwork.iris.functional.lnp.lsr.portps.*"/>
      <package name="com.inetwork.iris.functional.lnp.portins.portps.*"/>
    </packages>
    <classes>
      <class name="com.inetwork.iris.functional.lnp.psscomparison.PssPortPsComparisonTest"/>
    </classes>
  </test>
  <test name="hosted E911 orders">
    <packages>
      <package name="com.inetwork.iris.functional.e911.hostedE911"/>
    </packages>
  </test>

  <test name="Jasper Reports">
    <packages>
      <package name="com.inetwork.iris.functional.reporting.*"/>
    </packages>
  </test>

</suite>