<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="true" scan="true">
  <jmxConfigurator/>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%t] %-5p \(%F:%L\) %X{id} %m%n</pattern>
    </encoder>
  </appender>
  <root level="DEBUG">
    <appender-ref ref="STDOUT"/>
  </root>

  <logger name="com.bandwidth" level="DEBUG"/>
  <logger name="com.inetwork" level="DEBUG"/>
  <logger name="com.inetwork.common.dao" level="INFO"/>
  <logger name="com.inetwork.common.termination.utils" level="OFF"/>
  <logger name="com.inetwork.common.util.NeustarWirelessXmlSerializer" level="INFO"/>
  <logger name="com.inetwork.common.util.NeustarWirelineXmlSerializer" level="INFO"/>
  <logger name="com.inetwork.common.util.CustomBeanPropertyRowMapper" level="OFF"/>
  <logger name="org.springframework.amqp.rabbit.listener.adapter.MessageListenerAdapter"
    level="OFF"/>
  <logger name="org.springframework" level="OFF"/>
  <logger name="org.springframework.jdbc.datasource.DataSourceTransactionManager" level="OFF"/>
  <logger name="org.springframework.aop.framework.CglibAopProxy" level="OFF"/>
  <logger name="com.mchange.v2" level="OFF"/>
  <logger name="org.apache.cxf" level="OFF"/>
  <logger name="org.apache.http" level="INFO"/>
  <logger name="org.apache.http.wire" level="DEBUG"/>
  <logger name="com.jayway.restassured" level="DEBUG"/>

  <logger name="jdbc.sqlonly" level="OFF"/>
  <logger name="jdbc.sqltiming" level="INFO"/>
  <logger name="jdbc.audit" level="OFF"/>
  <logger name="jdbc.resultset" level="OFF"/>
  <logger name="jdbc.connection" level="OFF"/>
  <logger name="jdbc.resultsettable" level="OFF"/>

</configuration>
